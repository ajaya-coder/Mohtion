# GitHub App Configuration
# Get these from https://github.com/settings/apps/your-app-name
GITHUB_APP_ID=your_app_id
GITHUB_PRIVATE_KEY_BASE64=base64_encoded_private_key_pem
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-...

# Redis (for job queue)
REDIS_URL=redis://localhost:6379

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://mohtion:password@localhost:5432/mohtion

# App Settings
DEBUG=false
LOG_LEVEL=INFO

# Agent Settings
MAX_RETRIES=2
MAX_PRS_PER_DAY=3
DEFAULT_COMPLEXITY_THRESHOLD=10
